<div class="row">
  <form class="block-form login-form col-xs-12 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4" data-state="">
    <div class="form-group">
      <input type="text" class="form-control login-field" value="" placeholder="Enter your name" id="login-username" autofocus>
      <label class="login-field-icon fui-user" for="login-username"></label>
    </div>

    <div class="form-group">
      <input type="password" class="form-control login-field" value="" placeholder="Password" id="login-password">
      <label class="login-field-icon fui-lock" for="login-pass"></label>
    </div>

    <button id="login-submit" class="btn btn-primary btn-lg btn-block btn-submit" href="#">
      <span class="btn-login-text">Log in</span>
      <div class="sk-spinner sk-spinner-wave">
        <div class="sk-rect1"></div>
        <div class="sk-rect2"></div>
        <div class="sk-rect3"></div>
        <div class="sk-rect4"></div>
        <div class="sk-rect5"></div>
      </div>
    </button>
    <a class="login-link" href="#">Lost your password?</a>
  </form>
</div>
